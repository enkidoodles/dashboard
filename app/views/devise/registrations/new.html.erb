<main class="container-fluid mt-4">
    <div class="card m-auto" style="width: 20rem;">
        <div class="card-block">
            <i class="fa fa-5x fa-user-circle-o d-block text-center"></i>
            <h4 class="card-title text-center">Sign up</h4>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

              <%= devise_error_messages! %>

              <div class="form-group">
                <label for="user_email" class="form-control-label">Email</label>
                <%= f.email_field :email, class: "form-control", placeholder: "admin@mymail.com" %>
              </div>

              <div class="form-group">
                <label for="user_password">Password</label>
                <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "*******" %>
                <small id="emailHelp" class="form-text text-muted">(6 characters minimum)</small>
              </div>

              <div class="form-group" class="form-control-label">
                <label for="user_password_confirmation">Confirm Password</label>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "*******" %>
              </div>

              <%= f.submit "Sign up" , :class => "btn btn-block btn-primary"%>

            <% end %>

        </div>
    </div>
</main>

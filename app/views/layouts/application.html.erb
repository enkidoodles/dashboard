<!DOCTYPE html>
<html>
  <head>
    <title>Dashboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar" id="signedin">
       <div class="col-sm-6">
          <p><%= link_to('Branches', branches_path)%> 
          <%= link_to('Home', :controller => 'home', :action => 'index') %></p>
      </div>
      <div class="col-sm-6" id="signout">
        <p>Hello, <%= current_user.email %> - <%= link_to "Sign_out", destroy_user_session_path, :method => 'delete' %></p> 
      </div>
      
      </nav>
     <% end %>
    <%= yield %>
  </body>
</html>
